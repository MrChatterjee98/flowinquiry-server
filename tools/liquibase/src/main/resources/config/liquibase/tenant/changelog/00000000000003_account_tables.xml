<?xml version="1.0" encoding="UTF-8"?>
<databaseChangeLog
        xmlns="http://www.liquibase.org/xml/ns/dbchangelog"
        xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
        xsi:schemaLocation="http://www.liquibase.org/xml/ns/dbchangelog
        http://www.liquibase.org/xml/ns/dbchangelog/dbchangelog-3.8.xsd">

    <!-- ChangeSet for creating the 'account' table -->
    <changeSet id="00000000000005" author="flexapp">
        <createSequence sequenceName="fw_crm_account_seq" minValue="1" startValue="1" incrementBy="1"/>
        <createTable tableName="fw_crm_account">
            <column name="id"  type="bigint" autoIncrement="true" >
                <constraints primaryKey="true" nullable="false"/>
            </column>
            <column name="account_name" type="VARCHAR(255)">
                <constraints nullable="false"/>
            </column>
            <column name="account_type" type="VARCHAR(50)">
                <constraints nullable="false"/>
            </column>
            <column name="industry" type="VARCHAR(100)"/>
            <column name="website" type="VARCHAR(255)"/>
            <column name="phone_number" type="VARCHAR(20)"/>
            <column name="email" type="VARCHAR(255)"/>
            <column name="address_line1" type="VARCHAR(255)"/>
            <column name="address_line2" type="VARCHAR(255)"/>
            <column name="city" type="VARCHAR(100)"/>
            <column name="state" type="VARCHAR(100)"/>
            <column name="postal_code" type="VARCHAR(20)"/>
            <column name="country" type="VARCHAR(100)"/>
            <column name="annual_revenue" type="VARCHAR(100)"/>
            <column name="parent_account_id" type="bigint"/>
            <column name="created_at" type="TIMESTAMP">
                <constraints nullable="false"/>
            </column>
            <column name="updated_at" type="TIMESTAMP"/>
            <column name="status" type="VARCHAR(50)">
                <constraints nullable="false"/>
            </column>
            <column name="assigned_to_user_id" type="bigint"/>
            <column name="notes" type="TEXT"/>
        </createTable>

        <!-- Add foreign key constraint for parent_account_id -->
        <addForeignKeyConstraint
                baseTableName="fw_crm_account"
                baseColumnNames="parent_account_id"
                referencedTableName="fw_crm_account"
                referencedColumnNames="id"
                constraintName="fk_account_parent_account"
                deferrable="true"
                initiallyDeferred="true"/>

        <addForeignKeyConstraint
                baseTableName="fw_crm_account"
                baseColumnNames="assigned_to_user_id"
                referencedTableName="fw_user"
                referencedColumnNames="id"
                constraintName="fk_account_user"
                deferrable="true"
                initiallyDeferred="true"/>

        <!-- Add indexes -->
        <createIndex indexName="idx_account_name" tableName="fw_crm_account">
            <column name="account_name"/>
        </createIndex>
        <createIndex indexName="idx_email" tableName="fw_crm_account">
            <column name="email"/>
        </createIndex>
        <createIndex indexName="idx_phone_number" tableName="fw_crm_account">
            <column name="phone_number"/>
        </createIndex>
        <createIndex indexName="idx_assigned_to_user_id" tableName="fw_crm_account">
            <column name="assigned_to_user_id"/>
        </createIndex>

    </changeSet>

</databaseChangeLog>